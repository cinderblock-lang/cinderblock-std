namespace std.string {
  export fn to_string(target: use char | int | long = T): string {
    store start = "";

    return if (target < 255c) {
      return start.add_char(target);
    } else {
      store addition = target % 255c;
      store next = start.add_char(addition);

      return next.concat(addition.to_string());
    };
  }
}