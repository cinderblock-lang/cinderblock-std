namespace std.string.utf_8 {
  using std.string;
  using std.testing;
  
  export struct StringIterableContext {
    done: bool;
    result?: int;
    next: int;
  }

  export fn get_character(target: string, index: int): int {
    store start = target.get_char(index);

    return if (target >= (0b11110000)) {
      return subject.extract_four_bytes(target);
    } else {
      return if (target >= (0b11100000)) {
        return subject.extract_three_bytes(target);
      } else {
        return if (target >= 0b11000000) {
          return subject.extract_two_bytes(target);
        } else {
          return subject.extract_one_bytes(target);
        };
      };
    };
  }

  export fn to_iterable(target: string): (index: int) -> StringIterableContext {
    store length = target.length();

    return fn (index: int) -> {
      store result = target.get_character(index);

      return if (result >= (65536i)) {
        return make StringIterableContext {
          assign next = index + 4i;
          assign result = result;
          assign done = index + 4i >= length;
        };
      } else {
        return if (result >= (2048i)) {
          return make StringIterableContext {
            assign next = index + 3i;
            assign result = result;
            assign done = index + 3i >= length;
          };
        } else {
          return if (result >= 255i) {
            return make StringIterableContext {
              assign next = index + 2i;
              assign result = result;
              assign done = index + 2i >= length;
            };
          } else {
            return make StringIterableContext {
              assign next = index + 1i;
              assign result = result;
              assign done = index + 1i >= length;
            };
          };
        };
      };
    };
  }

  fn isolate_bits(target: int, skip: int, take: int): int {
    store mask = (1i << take) - 1i;
    store start = target >> skip;
    return start & mask;
  }

  fn add_four_bytes(subject: string, target: int): string {
    return subject
      .add_char(0b11110000 + target.isolate_bits(18i, 3i))
      .add_char(0b10000000 + target.isolate_bits(12i, 6i))
      .add_char(0b10000000 + target.isolate_bits(6i, 6i))
      .add_char(0b10000000 + target.isolate_bits(0i, 6i));
  }

  fn add_three_bytes(subject: string, target: int): string {
    return subject
      .add_char(0b11100000 + target.isolate_bits(12i, 4i))
      .add_char(0b10000000 + target.isolate_bits(6i, 6i))
      .add_char(0b10000000 + target.isolate_bits(0i, 6i));
  }

  fn add_two_bytes(subject: string, target: int): string {
    return subject
      .add_char(0b11000000 + target.isolate_bits(6i, 5i))
      .add_char(0b10000000 + target.isolate_bits(0i, 6i));
  }

  fn add_one_bytes(subject: string, target: int): string {
    return subject.add_char(target);
  }

  export fn add_character(subject: string, target: int): string {
    return if (target >= (65536i)) {
      return subject.add_four_bytes(target);
    } else {
      return if (target >= (2048i)) {
        return subject.add_three_bytes(target);
      } else {
        return if (target >= 255i) {
          return subject.add_two_bytes(target);
        } else {
          return subject.add_one_bytes(target);
        };
      };
    };
  }

  test "std.string.utf_8.add_character Creats a single byte char" {
    return "".add_character(48i).expect_equals("0");
  }

  test "std.string.utf_8.add_character Creates a two byte char" {
    return "".add_character(502i).expect_equals("Ƕ");
  }

  test "std.string.utf_8.add_character Creates a three byte char" {
    return "".add_character(31169i).expect_equals("私");
  }

  test "std.string.utf_8.add_character Creates a four byte char" {
    return "".add_character(128516i).expect_equals("😄");
  }
}