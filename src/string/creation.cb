namespace std.string {
  export fn as_string(target: use char | int | long = T): string {
    store start = "";

    return if (target < 255i) {
      return start.add_char(target);
    } else {
      store addition = target % 255i;
      store next = start.add_char(addition);

      return next.concat(addition.as_string());
    };
  }

  test "std.string.as_string Creats a simple string" {
    return '0'.as_string().equals("0");
  }
}